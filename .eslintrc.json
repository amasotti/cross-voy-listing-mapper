{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:vue/vue3-essential"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "parser": "@typescript-eslint/parser",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "vue"
    ],
    "ignorePatterns": [
        "node_modules/",
        "dist/",
        "src/setupTests.ts",
        "test/",
        "main.ts",
        "server.js"
    ],
    "rules": {
        "@typescript-eslint/ban-ts-comment": "off"
    }
}
